macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/account.canonical<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/account.gmail<enter><change-folder>!<enter>'

folder-hook 'gmail.com' 'source ~/.mutt/account.gmail'
folder-hook 'canonical.com' 'source ~/.mutt/account.canonical'

source ~/.mutt/account.canonical

set sleep_time = 0

set pager_stop=yes
bind pager <Down> next-line
bind pager <Up> previous-line


# colors
color normal white default
color hdrdefault white default
color header blue default	'^date:'
color header red default	'^(to|cc|bcc):'
color header green default	'^from:'
color header yellow default	'^subject:'
color header white default	'^user-agent:'
color header red default	'^reply-to:'

# normal bindings
bind index,pager a        group-reply

